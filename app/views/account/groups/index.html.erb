<div class="col-md-12">

  <h2 class="text-center"> 我收藏的电影 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Film_Title </th>
        <th> Film_Description </th>
        <th> Post Count </th>
        <th> Last Update </th>
      </tr>
    </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td> # </td>
        <td> <%= link_to(group.file_name, group_path(group)) %> </td>
        <td> <%= group.file_description %> </td>
        <td> <%= group.posts.count %> </td>
        <td> <%= group.updated_at %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

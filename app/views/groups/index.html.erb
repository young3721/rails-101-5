<div class="col-md-12">
  <div class="group">
    <%= link_to("New film", new_group_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Film Title</td>
        <td>Film Description</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#<td>
          <td><%= link_to(group.film_title, group_path(group)) %></td>
          <td><%= group.film_description %></td>
          <td>
            <%= link_to("Edit", edit_group_path(group), class: "btn btn-sm btn-default")%>
            <%= link_to("Delete", group_path(group), class:"btn btn-sm btn-default",
            method: :delete, data: {confirm: "Are you sure?"} )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-4 col-md-offset-4">
  <h2>新增电影</h2>

  <hr>
  <%= form_for @group do |f| %>

  <% if @group.errors.any? %>
  <ul>
    <% @group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  电影标题
  <%= f.text_field :file_name %>
  <br>
  电影简述
  <br>
  <%= f.text_area :file_description %>
  <br>

  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
  <% end %>
</div>
